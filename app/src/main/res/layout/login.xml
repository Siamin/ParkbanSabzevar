<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginLeft="-292dp"
        android:background="@drawable/bac"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/parking" />

        <atrebute.MyTextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:text="حساب کاربری"
            android:textColor="#fff"
            android:textSize="13sp" />

    </RelativeLayout>

    <atrebute.MyTextView
        android:id="@+id/login_register"
        android:layout_width="81dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/b6"
        android:gravity="center_vertical|center_horizontal"
        android:text="ثبت نام"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        android:layout_marginTop="139dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <atrebute.MyEditText
        android:id="@+id/login_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_dark"
        android:ems="10"
        android:gravity="right"
        android:hint="شماره تلفن"
        android:inputType="phone"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/login_register"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <atrebute.MyEditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_dark"
        android:ems="10"
        android:gravity="right"
        android:hint="رمز عبور"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/login_number"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <atrebute.MyButton
        android:id="@+id/login_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/green_complete"
        android:text="ورود"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <atrebute.MyTextView
        android:id="@+id/login_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="فراموشی رمز عبور"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/login_login"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>