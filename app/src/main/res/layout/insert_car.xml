<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_complete"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <atrebute.MyEditText
            android:id="@+id/insert_car_plak4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bacgrond_edittext"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="98"
            android:inputType="number" />

        <atrebute.MyEditText
            android:id="@+id/insert_car_plak3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bacgrond_edittext"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="123"
            android:inputType="number" />

        <Spinner
            android:id="@+id/insert_car_plak2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" />

        <atrebute.MyEditText
            android:id="@+id/insert_car_plak"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bacgrond_edittext"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="22"
            android:inputType="number" />

    </LinearLayout>

    <atrebute.MyEditText
        android:id="@+id/insert_car_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bacgrond_edittext"
        android:ems="10"
        android:hint="شماره تلفن"
        android:inputType="number" />

    <atrebute.MyEditText
        android:id="@+id/insert_car_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bacgrond_edittext"
        android:ems="10"
        android:hint="نام"
        android:inputType="textPersonName" />

    <atrebute.MyEditText
        android:id="@+id/insert_car_family"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bacgrond_edittext"
        android:ems="10"
        android:hint="نام خانوادگی"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/insert_car_pay"
        android:layout_width="200dp"
        android:layout_height="35dp" />

    <atrebute.MyButton
        android:id="@+id/insert_car_ok"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="25dp"
        android:elevation="8dp"
        android:background="@drawable/button"
        android:text="ثبت" />

</LinearLayout>